{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2020"],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules", "tmp", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.graphql", "documentNode.d.ts"]
}

